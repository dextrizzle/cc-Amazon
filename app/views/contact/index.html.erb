<h1>contact us</h1>

<% if params[:name].present? %>
  Hi <%= params[:name] %>, thank you for contacting us. We will get back to you shortly!
<% end %>

<%= form_tag contact_submit_path do%>
  <%# will generate a submit button for the form with label 'Contact Us' %>
  <div class="">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div class="">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div class="">
    <%= label_tag :message %>
    <%= text_area_tag :message %>
  </div>
  <%= submit_tag 'Contact Us' %>
<% end %>
